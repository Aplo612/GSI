@model GSI.Models.Producto

<div class="modal fade" id="confirmarEliminarProductoModal" tabindex="-1" role="dialog" aria-labelledby="confirmarEliminarProductoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmarEliminarProductoModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea eliminar este producto? Escriba "Sí" para confirmar.</p>
                <input type="hidden" id="confirmProductoId" />
                <input type="text" id="confirmacionTexto" class="form-control" placeholder="Escriba 'Sí' para confirmar" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger" onclick="confirmarEliminacion()">Eliminar</button>
            </div>
        </div>
    </div>
</div>
